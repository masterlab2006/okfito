*,
*::after,
*::before
    box-sizing border-box

h1, h2, h3, h4, h5, h6, ul
    margin 0
    padding 0

#fl_start_lp
    font-size calc(100vw/20)

    +md-block()
        font-size calc(100vw/48)

    +lg-block()
        font-size calc(100vw/120)

.fl_start_lp
    background #FAFAFA
    overflow hidden
    padding 0 
    font-family Gotham, -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, Helvetica Neue, Arial, sans-serif, Apple Color Emoji, Segoe UI Emoji, Segoe UI Symbol, Noto Color Emoji
    position relative
