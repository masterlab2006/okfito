.btn
	font-size em(10)
	font-weight 600
	display inline-flex
	justify-content: center
	align-items: center
	height: (40/10em)
	min-height: (40/10em)
	min-width: (180/10em)
	color #fff
	text-decoration none
	outline: none
	border none
	transition: all 0.4s
	border-radius: (12/10em)
	background-color #64A060
	text-transform uppercase
	cursor pointer
	border 1px solid #64A060
	font-family $ff

	&:hover
	&:active
	&:focus
		background-color #40763D
		outline: none
		border-color #40763D

	+md-block()
		font-size 1em
		border-radius: em(20)
		min-width: em(300)
		min-height: em(70)
		height: em(70)

	&--white
		border-color: #fff
		background-color transparent

		&:hover
		&:active
		&:focus
			background-color #64A060
			border-color #64A060