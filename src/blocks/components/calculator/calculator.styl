                position absolute
                content ''
                display block
                border-radius: 50%
                left 50%
                transform: translateX(-50%)
                transition: all 0.4s

            &:before
                width em(20)
                height em(20)
                background-color #fff
                border: 2px solid #BABABA;
                bottom em(-10)

                +md-block()
                    width em(30)
                    height em(30)
                    border: 4px solid #BABABA;
                    bottom em(-15)
            
            &:after
                width em(10)
                height em(10)
                background-color #fff
                bottom em(-5)

                +md-block()
                    width em(14)
                    height em(14)
                    bottom em(-7)

            &.active
                &:before
                    border-color #64A060
                &:after
                    background-color #64A060

            &--1
                background-image url(../img/content/calculator/img-1-sm.png)
                +md-block()
