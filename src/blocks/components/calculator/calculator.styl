        +lg-block()
            flex-direction: column

        &__title
            font-style: normal;
            font-weight: 500;
            font-size: em(10)
            line-height: 150%;
            position relative
            padding 0 0 0 (30/10em)
            width (132/10em)
            cursor pointer

            +md-block()
                font-size 1em
                width em(280)
                padding 0 0 0 em(56)

            &:before
            &:after
                position absolute
                content ''
                display block
                border-radius: 0%
                transition: all 0.4s
                font-size (16/10em)                
                top em(4)
                width em(20)
                height em(20)
                left 0

                +md-block()
                    font-size 1em
                    width em(30)
                    height em(30)

            &:before
                background-color #fff
                border: 2px solid #BABABA;
            
            &:after
                z-index 1
                background-repeat no-repeat
                background-position 50% 50%
                background-size em(10) auto
                background-image embedurl('../img/content/calculator/check.svg')
                opacity 0

                +md-block()
                    background-size em(15) auto

            &.active
            &:hover
                &:before
                    border-color #64A060
                    background-color #64A060
                &:after
                    opacity 1

