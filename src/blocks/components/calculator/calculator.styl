    &__title
        font-weight: 600;
        font-size: em(14)
        line-height: 150%;
        margin-bottom (6/14em)

    &__total
        font-weight: 700;
        font-size: em(30)
        line-height: 150%;
        color #64A060
        margin-bottom (16/30em)

        &--white
            color #fff

    &__note
        margin (8/10em) 0 3em
        font-weight: 500;
        font-size: em(10)
        line-height: 150%;
        padding 0 0 0 (50/10em)
        background embedurl('../img/content/calculator/icon-1.svg') 0 (8/10em) no-repeat
        background-size (27/10em) auto
