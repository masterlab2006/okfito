html.mobile.fl-popover-opened
html.mobile.fl-popover-opened > body
    -webkit-overflow-scrolling touch !important
    overflow auto !important
    height 100% !important

.fl-popover

    &__container
        position fixed
        top 0
        left 0
        z-index 99999
        width 100%
        direction ltr

    &__dim
        display none
        position fixed
        top 0
        right 0
        bottom 0
        left 0
        background-color #000
        z-index 0
        opacity 0

    &__wrap
        display none
        position relative
        box-sizing border-box
        max-width 100%
        flex 0 0 auto
        margin auto

    &__close
        z-index 2
        position absolute
        top -15px
        right -15px
        width 30px
        height 30px
        cursor pointer
        background-image url('data:image/png;base64,')
        background-repeat no-repeat
        background-position 0 0

    &__body
        max-width 100%
        box-sizing border-box
        position relative
        display inline-block
        padding 20px 40px 35px
        vertical-align middle

        &:before
        &:after
            content ""
            display table

        &:after
            clear both

    &__loader 
        display none
        background url("data:image/gif;base64,") no-repeat center rgba(255,255,255,.8)
        position absolute
        top 0
        right 0
        bottom 0
        left 0
        margin 5px
        z-index 1
        cursor pointer

    &__scrolling
        position fixed
        top 0
        right 0
        bottom 0
        left 0
        height 100%
        width 100%
        overflow auto
        z-index 1
        display -webkit-box
        display -moz-box
        display -ms-flexbox
        display -webkit-flex
        display flex
        align-items flex-start
        -ms-flex-align start
        padding 40px 20px 20px 20px
        padding 0
        box-sizing border-box

        +md-block()
            padding 40px 20px 20px 20px

        &.disable
            overflow hidden
            z-index -1

.form-popup

    font-size calc( 100vw/20 )

    +md-block()
        font-size calc( 100vw/48 )
    
    +lg-block()
        font-size calc( 100vw/120 )
        font-size: 16px

    +xl-block()
        font-size: 16px

    .fl-popover__body
        background none
        border none
        padding 0

        +md-block()
            background-color #FEFEFE
            width em(668)
            border-radius: em(20)

        +lg-block()
            width em(800)
            margin 0
    
    .fl-popover__close

        background-image embedurl("../img/content/close.svg")
        background-size 100% 100%
        width (20/16em)
        height (20/16em)
        right (20/16em)
        top (20/16em)

        +md-block()
            width (26/16em)
            height (26/16em)
            right (26/16em)
            top (46/16em)

.error
    .form__note
        display block

.form-intro

    min-height 100vh
    width 100vw
    background-color #FEFEFE
    padding: em(40) em(20)
    display flex
    flex-direction: column
    justify-content: center

    +md-block()
        width auto
        min-height: 0
        display block
        // border-radius: em(20)
        padding em(60) em(40)
        // width em(668)
        background none

    +lg-block()
        // width em(800)
    
    &__wrap
        display none

    &__header
        font-family: $ff2
        font-style: normal;
        font-weight: 400;
        font-size: em(24)
        line-height: 100%;
        text-align: center;
        color: #000000;
        margin-bottom (20/24em)

        +md-block()
            font-size em(40)
            margin-bottom (30/40em)

        +lg-block()
            max-width: (512/40em)
            margin-left auto
            margin-right auto

    input[type="text"]
    input[type="number"]
        text-align center

    &__success
        font-weight: 400;
        font-size: em(24)
        line-height: 100%;
        text-align: center;
        font-family $ff2
        display none

        +md-block()
            font-size em(40)

.active
    .form-intro__success
        display block

    .form-intro__header
    .form--intro
        display none

.form--intro
    min-width: em(220)
    max-width: em(220)

    +md-block()
        min-width: em(350)
        max-width: em(350)

    +lg-block()
        justify-content: center
        min-width: em(350)
        max-width: em(350)

        .form__item + .form__item:not(.form__item--btn)
            margin-top em(30)

    .form__item--btn
        margin-top em(20)

        +md-block()
            margin-top em(30)

    .btn
        min-width: 22em

    .form__item
        +lg-block()
            width: em(350)
            min-width: em(350)
            max-width: em(350)

    .form__note
        left 0
        right 0
        text-align center


.popup-mess
    font-weight: 400;
    font-size: em(24)
    line-height: 100%;
    text-align: center;
    font-family $ff2

.hidden
