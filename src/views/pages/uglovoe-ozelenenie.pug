				{img: './img/content/inner/3/thumbs/3.png',},
				{img: './img/content/inner/3/thumbs/4.png',},
				{img: './img/content/inner/3/thumbs/5.png',},
				{img: './img/content/inner/3/thumbs/6.png',},
				{img: './img/content/inner/3/thumbs/7.png',},
			],
